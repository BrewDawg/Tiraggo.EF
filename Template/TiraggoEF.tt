<#+ 
public string Get_tgSystemType(string type)
{
    return type.Replace("[]", "Array");
}
#>
<#+ 
public ulong GetMaxLength(string length)
{
    if(string.IsNullOrWhiteSpace(length)) return 0;

    return Convert.ToUInt64(length);
}
