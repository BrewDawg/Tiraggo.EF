<#@ include file="EF.Utility.CS.ttinclude"#>
<#@ assembly name="TiraggoEdmx" #>
<#@ import namespace="System.Data" #>
<#@ import namespace="System.Xml.Serialization" #>
<#@ import namespace="TiraggoEdmx" #>
